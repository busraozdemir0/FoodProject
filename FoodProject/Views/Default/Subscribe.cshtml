
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="newsletter">
    <div class="container">
        <div class="w3agile_newsletter_left">
            <h3>Bültenimize kaydolun.</h3>
        </div>
        <div class="w3agile_newsletter_right">
            <form action="/Default/Subscribe/" method="post">
                <input id="txtmail" type="email" class="mail" name="EMail" value="E-Mail" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'E-Mail';}" required="">
                <input id="btn" type="submit" value="Abone Olun" class="subscribe">
            </form>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<script>
    $(function () {
        $(".subscribe").click(function (responseTxt, statusTxt, xhr) {
            if (statusTxt = "success")
                alert('E-Bültenimize başarıyla kaydoldunuz.');
            else if(statusTxt = "error")
                alert("Hatayla karşılaşıldı");
        });
    });
</script>


