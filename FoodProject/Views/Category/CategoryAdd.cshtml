@model FoodProject.Data.Models.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category Add Page</h1>
<br />
@using(Html.BeginForm("CategoryAdd","Category",FormMethod.Post))
{
    @Html.Label("Category Name")
    @Html.TextBoxFor(x=>x.CategoryName,new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryName,"",new{@style="color:red"})  @* string içini boş bırakmamızın sebebi model tarafında Required ile Error Mesajı bırakmamızdır. *@
    <br />
    @Html.Label("Category Description")
    @Html.TextAreaFor(x=>x.CategoryDescription,8,3,new{@class="form-control"})
    <br />
    <button id="btnSave" class="btn btn-info">Save</button>

}
<br><br />
<button class="btn btn-outline-dark" data-toggle="modal" data-target="#Modal1">Repeat Add</button>
<div class="modal" tabindex="-1" role="dialog" id="Modal1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
                {
                    @Html.Label("CategoryName")
                    @Html.TextBoxFor(x=>x.CategoryName,new{@class="form-control"})
                    @Html.ValidationMessageFor(x=>x.CategoryName,"",new{@style="color:red"})  @* string içini boş bırakmamızın sebebi model tarafında Required ile Error Mesajı bırakmamızdır. *@
                    <br />
                    @Html.Label("CategoryDescription")
                    @Html.TextAreaFor(x=>x.CategoryDescription,8,3,new{@class="form-control"})
                    <br />
                    <button id="btnSave" class="btn btn-info">Save</button>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $("#btnSave").click(function () {
            alert("Başarıyla eklendi.");
        });
    });
</script>