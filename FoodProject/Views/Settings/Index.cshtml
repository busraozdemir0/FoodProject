@model FoodProject.Data.UserUpdateModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Bilgileri Güncelleme Sayfası</h2>

<div class="card-body">
    <br />
    <form class="forms-sample" method="post">
        <div class="form-group">
            <label for="exampleInputName1">Adı Soyadı</label>
            <input type="text" name="namesurname" value="@Model.namesurname" class="form-control" />
        </div>
        <div class="form-group">
            <label for="exampleInputEmail3">Kullanıcı Adı</label>
            <input type="text" name="username" value="@Model.username" class="form-control" />
        </div>
        <div class="form-group">
            <label for="exampleInputEmail3">Mail Adresi</label>
            <input type="text" name="email" value="@Model.email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="exampleInputEmail3">Şifreni Değiştir</label>
            <input type="password" name="password" value="" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="/Chart/Statistics/" class="btn btn-light">İptal</a>
    </form>
</div>
